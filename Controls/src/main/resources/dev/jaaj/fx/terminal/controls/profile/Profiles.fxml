<?import dev.jaaj.fx.terminal.controls.profile.ProfileForm?>
<?import dev.jaaj.fx.terminal.controls.profile.ProfileListView?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<SplitPane prefWidth="700" fx:id="root" xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml" dividerPositions="0.1">
    <BorderPane maxWidth="200" minWidth="200"><!--fix this-->
        <top>
            <HBox alignment="CENTER_LEFT" SplitPane.resizableWithParent="false">
                <TextField HBox.hgrow="SOMETIMES"/>
                <Button text="add" HBox.hgrow="NEVER"/>
            </HBox>
        </top>
        <center>
            <ScrollPane fitToHeight="true" fitToWidth="true">
                <ProfileListView fx:id="listProfiles"/>
            </ScrollPane>
        </center>
        <bottom>
            <HBox fx:id="buttons">
                <Button fx:id="btn1" text="%import"/>
                <Button fx:id="btn2" text="FUIUF A"/>
            </HBox>
        </bottom>
    </BorderPane>
    <VBox fx:id="right">
        <ProfileForm fx:id="profileForm"/>
    </VBox>
</SplitPane>
