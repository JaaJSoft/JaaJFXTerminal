<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml">
    <padding>
        <Insets top="15" bottom="15" left="15" right="15"/>
    </padding>
    <Label fx:id="nameLabel"/>
    <Label fx:id="licenceLabel" style="-fx-font-size: 12; -fx-font-style: italic"/>
    <HBox fx:id="buttonBox">
        <padding>
            <Insets top="10"/>
        </padding>
        <Button fx:id="websiteBtn" onAction="#openWebsite">
            <graphic>
                <ImageView fitWidth="20.0" preserveRatio="true">
                    <Image preserveRatio="true" url="@internet_96px.png"/>
                </ImageView>
            </graphic>
        </Button>
    </HBox>
</VBox>
