<?import dev.jaaj.fx.terminal.controls.theme.TerminalThemeForm?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox prefWidth="400" prefHeight="500" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
      spacing="10"
      fx:id="contentPane">
<!--    <HBox alignment="CENTER_LEFT" spacing="10">
        <Label text="%profile_name" style="-fx-font-size: 16"/>
        <Label fx:id="profileName" style="-fx-font-size: 16"/>
        <padding>
            <Insets top="10" left="10" right="10"/>
        </padding>
    </HBox>-->

    <TabPane tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS" fx:id="tabPane">
        <Tab text="Shell">
            <ScrollPane fx:id="shellFormBox" VBox.vgrow="ALWAYS"
                        fitToWidth="true"
                        fitToHeight="true">
                <padding>
                    <Insets top="10" left="5" right="5"/>
                </padding>
            </ScrollPane>
        </Tab>
        <Tab text="%theme">
            <VBox spacing="10">
                <padding>
                    <Insets top="10" left="5" right="5"/>
                </padding>
                <HBox spacing="5" alignment="CENTER_LEFT">
                    <CheckBox text="%label_follow_system_theme" fx:id="checkBoxSystemTheme"/>
                </HBox>
                <VBox spacing="5">
                    <Label text="%built_in_themes"/>
                    <ChoiceBox fx:id="builtInThemes"/>
                </VBox>
                <Separator/>
                <TerminalThemeForm VBox.vgrow="ALWAYS">

                </TerminalThemeForm>
            </VBox>

        </Tab>
    </TabPane>
</VBox>
