<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox prefHeight="500" prefWidth="550" spacing="10" xmlns="http://javafx.com/javafx/11.0.1"
      xmlns:fx="http://javafx.com/fxml/1">
    <HBox spacing="10">
        <ImageView fx:id="icon" fitHeight="50" preserveRatio="true"/>
        <VBox alignment="CENTER_LEFT">
            <Label fx:id="appName" style="-fx-font-size: 20"/>
            <Label fx:id="version" style="-fx-font-size: 14"/>
        </VBox>
    </HBox>
    <TabPane fx:id="tabPane" tabClosingPolicy="UNAVAILABLE">
        <Tab fx:id="aboutTab" text="%aboutTab">
            <Label fx:id="aboutText" prefWidth="550.0" wrapText="true">
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </padding>
            </Label>
        </Tab>
        <!-- <Tab fx:id="libsTab" text="%libsTab">

         </Tab>
         <Tab fx:id="developersTab" text="%developersTab">

         </Tab>
         <Tab fx:id="thanksTab" text="%thanksTab">

         </Tab>
         <Tab fx:id="translateTab" text="%translatorsTab">

         </Tab>-->
    </TabPane>
</VBox>
